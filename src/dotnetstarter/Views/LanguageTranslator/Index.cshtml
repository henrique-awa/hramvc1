@{
    ViewData["Title"] = "Language Translator";
    @model dotnetstarter.Models.TranslateViewModel
    
}
    <!-- Step 2 Section-->
    <div class="container">
        <div class="row">
            <div class="col-lg-12 col-md-12 col-sm-12">
                <h2>Translate Text</h2>
            </div>
            <div class="col-lg-6 col-md-6 col-sm-6">
                <h3>Input</h3>
                <div class="form-group row">
                    <div class="col-lg-12">
                        <select asp-for="SelectedInputLanguage" asp-items="Model.LanguageList" class="form-control"></select>
                    </div >
                </div >
                <!--Tab panes-->
                <div class="well">
                    <form class="form-horizontal">
                        <div role = "tabpanel">
                            <!--Nav tabs -->
                            <ul class="nav nav-tabs" role="tablist">
                                <li role = "presentation" class="active"><a href = "#home" aria-controls="home" role="tab" data-toggle="tab">Text</a></li>
                            </ul>
                            <div class="hr-tab"></div>
                            <fieldset>
                                <div class="form-group row">
                                    <div class="col-lg-12">
                                        <div class="tab-content">
                                            <div role = "tabpanel" class="tab-pane active" id="home">
                                                <textarea asp-for="InputText" style="width:500px"></textarea>
                                            </div>
                                            <div role = "tabpanel" class="tab-pane" id="profile">
                                                <textarea disabled = "disabled" > Example of Rest API</textarea>
                                            </div>
                                        </div>
                                    </div>
                                    <!-- .col-lg-12 -->
                                </div>
                                <!-- .form -->
                            </fieldset>
                    </form>
                    </div>
                </div>
            </div>

            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-6">
                    <h3>Output</h3>
                    <div class="form-group row">
                        <div class="col-lg-12">
                            <select asp-for="SelectedOutputLanguage" asp-items="Model.LanguageList" class="form-control"></select>
                        </div>
                    </div>
                    <!-- Tab panes -->
                    <div class="well">
                        <form class="form-horizontal">
                            <div role="tabpanel">
                                <!-- Nav tabs -->
                                <ul class="nav nav-tabs" role="tablist">
                                    <li role="presentation" class="active"><a href="#home2" aria-controls="home" role="tab" data-toggle="tab">Text</a></li>
                                </ul>
                                <div class="hr-tab"></div>
                                <fieldset>
                                    <div class="form-group row">
                                        <div class="col-lg-12">
                                            <div class="tab-content">
                                                <div role="tabpanel" class="tab-pane active" id="home2">
                                                    <textarea></textarea>
                                                </div>
                                                <div role="tabpanel" class="tab-pane" id="profile2">
                                                    <textarea asp-for="OutputText"  disabled="disabled">Example of JSON</textarea>
                                                </div>
                                            </div>
                                        </div>
                                        <!-- .col-lg-12 -->
                                    </div>
                                    <!-- .form -->
                                </fieldset>
                        </form>
                        </div>
                        <!-- /.well -->
                    </div>
                    <!-- /.tabpanel -->
                </div>
                <!-- /.col-lg-6 -->
            </div>
          